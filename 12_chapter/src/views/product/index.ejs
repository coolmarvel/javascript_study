<%- include('../partials/header') %>
<div class="row">
  <h1 class="page-header"><%= product.title %></h1>

  <div class="col-xs-12 col-md-5">
    <img src="/product-images/<%= product.id %>/<%= product.image %>" alt="" style="width: 100%;">
    <br>
  </div>

  <div class="col-xs-12 col-md-7">
    <p>설명: <%= product.desc %></p>
    <p>가격: <%= product.price %></p>
    <% if (currentUser) { %>
    <form action="/cart/<%= product.slug %>" method="post">
      <button class="btn btn-primary" role="button">카트에 추가</button>
    </form>
    <% } else { %>
    <p>먼저 로그인을 해주세요.</p>
    <% }; %>
  </div>

  <div class="col-xs-12 col-md-5">
    <div class="d-flex">
      <% galleryImages.forEach((image)=>{ %>
      <% if (image!=='thumbs') { %>
      <div>
        <a href="/product-images/<%= product.id %>/gallery/<%= image %>" data-fancybox="gallery">
          <img src="/product-images/<%= product.id %>/gallery/<%= image %>" alt="">
        </a>
      </div>
      <% } %>
      <% }); %>
    </div>
  </div>
</div>
<%- include('../partials/footer') %>